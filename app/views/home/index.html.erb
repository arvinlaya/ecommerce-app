<div id="home-container" class="container">
	<div id="products-container">
		<% @products.each do |product| %>
			<div class="product-card">	
				<p id="name"><%= product.name %></p>
				<p id="description"><%= product.description %></p>
				<p id="price">â‚±<%= product.price %></p>
				<div class="icons-container" data-controller="product">
					<button><i class="fa-solid fa-cart-shopping"></i></button>
					<a href= "/product/edit/<%= product.id %>"><i class="fa-solid fa-pencil"></i></a>
					<button data-product-id=<%= product.id %> data-action="click->product#deleteProduct">
						<i class="fa-solid fa-trash"></i>
					</button>
				</div>
			</div>
		<% end %>
	</div>
</div>